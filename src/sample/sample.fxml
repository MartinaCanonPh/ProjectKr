<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Text text="Job scheduling processing application."></Text>
            <Text text="Chose the type of scheduling to process."></Text>
            <Button fx:id="singleBtn" mnemonicParsing="false" onAction="#create_frame_single" prefWidth="150.0" text="Single Machine" />
            <Button fx:id="multipleBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#create_frame_multiple" prefWidth="150.0" text="Multiple machine" />
            <Button fx:id="multiple_wBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefWidth="150.0" onAction="#create_frame_single_weighted" text="Single machine weighted" />
            <Button fx:id="single_wBtn" layoutX="10.0" layoutY="35.0" mnemonicParsing="false" prefWidth="150.0"  onAction="#create_frame_multiple_weighted" text="Multiple machine weighted" />
            <Text text="For info click me!" onMouseClicked="#showGit"></Text>
         </children>
      </VBox>
   </center>
</BorderPane>
